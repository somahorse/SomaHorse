rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile pictures - users can only upload/delete their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Portfolios - users can only upload/delete their own
    match /portfolios/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Assessment files - readable by owner, writable by owner
    match /assessments/{assessmentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Project files - readable by project participants
    match /projects/{projectId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}


